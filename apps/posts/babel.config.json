// }

{
  "presets": [
    "@babel/preset-react",
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": "last 2 versions"
        },
        "modules": false,
        "loose": false
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": ["transform-class-properties", "react-hot-loader/babel", "syntax-dynamic-import"],
  "env": {
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
